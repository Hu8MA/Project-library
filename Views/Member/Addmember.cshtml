@model Labrary2023.Models.member

@{
    ViewData["Title"] = "Addmember";
}

<h1>Addmember</h1>

<h4>member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Addmember">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fname" class="control-label"></label>
                <input asp-for="Fname" class="form-control" />
                <span asp-validation-for="Fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lname" class="control-label"></label>
                <input asp-for="Lname" class="form-control" />
                <span asp-validation-for="Lname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="joinedDate" class="control-label"></label>
                <input asp-for="joinedDate" class="form-control" />
                <span asp-validation-for="joinedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idmeb_sta" class="control-label"></label>
                <select asp-for="idmeb_sta" class ="form-control" asp-items="ViewBag.idmeb_sta"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
