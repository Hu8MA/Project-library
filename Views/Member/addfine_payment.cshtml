@model Labrary2023.Models.fine_payment

@{
    ViewData["Title"] = "addfine_payment";
}

<h1>addfine_payment</h1>

<h4>fine_payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addfine_payment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idmeb" class="control-label"></label>
                <select asp-for="idmeb" class ="form-control" asp-items="ViewBag.idmeb"></select>
            </div>
            <div class="form-group">
                <label asp-for="DatePay" class="control-label"></label>
                <input asp-for="DatePay" class="form-control" />
