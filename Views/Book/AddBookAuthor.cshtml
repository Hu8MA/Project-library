                <label asp-for="idbook" class="control-label"></label>
                <select asp-for="idbook" class ="form-control" asp-items="ViewBag.idbook"></select>
            </div>
            <div class="form-group">
                <label asp-for="idAuthor" class="control-label"></label>
                <select asp-for="idAuthor" class ="form-control" asp-items="ViewBag.idAuthor"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
