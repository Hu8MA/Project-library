@model Labrary2023.Models.book_author

@{
    ViewData["Title"] = "AddBookAuthor";
}

<h1>AddBookAuthor</h1>

<h4>book_author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBookAuthor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
