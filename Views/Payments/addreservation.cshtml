@model Labrary2023.Models.reservation

@{
    ViewData["Title"] = "addreservation";
}

<h1>addreservation</h1>

<h4>reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addreservation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idbook" class="control-label"></label>
                <select asp-for="idbook" class ="form-control" asp-items="ViewBag.idbook"></select>
            </div>
            <div class="form-group">
                <label asp-for="idmeb" class="control-label"></label>
                <select asp-for="idmeb" class ="form-control" asp-items="ViewBag.idmeb"></select>
            </div>
            <div class="form-group">
                <label asp-for="reservation_states_id" class="control-label"></label>
                <select asp-for="reservation_states_id" class ="form-control" asp-items="ViewBag.reservation_states_id"></select>
            </div>
            <div class="form-group">
                <label asp-for="reservation_date" class="control-label"></label>
                <input asp-for="reservation_date" class="form-control" />
                <span asp-validation-for="reservation_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
